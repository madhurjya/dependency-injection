{
    "version": "0.1.0",
    "command": "babel",
    "isShellCommand": true,
    "showOutput": "silent",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "babel-es5",
            "args": [
                "src",
                "--out-dir",
                "dist",
                "--source-maps",
                "--watch",
                "--copy-files"
            ],
            "isWatching": true,
            "isBuildCommand": true
        }
    ]
}