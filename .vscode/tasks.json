{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "lint",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "lint",
                "-s"
            ],
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}